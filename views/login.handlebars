<link rel="stylesheet" href="../css/login.css" />
<h1 class="text-center">Sing Up to Ratatoullie</h1>
<div class="d-flex flex-wrap justify-content-evenly gap-3">

	<div class="form-login-container">

		<h2>Login</h2>
		<form class="form-login-form">
			<div class="form-group">
				<label for="email-login">email:</label>
				<input class="form-input" type="text" id="email-login" />
			</div>
			<div class="form-group">
				<label for="password-login">password:</label>
				<input class="form-input" type="password" id="password-login" />
			</div>
			<div class="login-form">
				<button
					class="btn btn-primary w-100"
					id="login-button"
					type="submit"
				>login</button>
			</div>
		</form>
	</div>

	<div class="form-login-container">
		<h2>Signup</h2>

		<form class="form-signup-form">
			<div class="form-group">
				<label for="name-signup">name:</label>
				<input class="form-input" type="text" id="name-signup" />
			</div>
			<div class="form-group">
				<label for="email-signup">email:</label>
				<input class="form-input" type="text" id="email-signup" />
			</div>
			<div class="form-group">
				<label for="password-signup">password:</label>
				<input
					class="form-input"
					type="password"
					id="password-signup"
				/>
			</div>
			<div class="signup-form">
				<button
					class="btn btn-primary w-100"
					id="signup-button"
					type="submit"
				>signup</button>
			</div>
		</form>
	</div>
	<script src="../js/login.js"></script>
</div>